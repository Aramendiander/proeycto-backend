extends ../layout

block content 
    main
        h1.home_title Buy #{category}
        if(products)
            article.productlist
                each product  in products
                    each item in product.products
                        div.product
                            a(href=`/product/${item.title}`) 
                                img(src=item.picture, alt="", srcset="")
                                p.title= item.title
                                p.price= item.price + 'â‚¬'
                            form.addform(action="/cart/addToCart" method="post")
                                input(type="number" name="quantity" value="1" min="1" max="9" autocomplete="off")
                                input(type="hidden" name="product_id" value=`${item.id}`)
                                button.btn.btn-primary(type="submit")
                                    | <i class="fas fa-shopping-cart"></i> Add to cart