  body
    header 
      nav.top
        form.d-flex
          input.form-control.me-2(type="search" placeholder="Search", aria-label="Search")
          button.btn.btn-outline-success(type="submit") Search
        if isAuthenticated 
          a.logout(href="/logout") Welcome #{username}, Log out?
        else
          a.login(href="/login") Log in
        a.cart(href="/cart")
          i(class="fa-solid fa-cart-shopping")
      nav.navbar
        ul.navul
          li.menu-item
            a.menu-link(href="/") Home
          li.menu-item
            a.menu-link(href="/category/microwaves") Microwaves
          li.menu-item
            a.menu-link(href="/category/scooters") Scooters
      
  block content 

  script(type="module", src="js/index.js")
  block script